{
  "name": "ts-preact-starter",
  "version": "1.0.0",
  "description": "Barebones starter project for Preact with TypeScript",
  "main": "index.js",
  "author": "Nick Taylor <nick@iamdeveloper.com>",
  "license": "MIT",
  "keywords": [
    "preact",
    "react",
    "typescript",
    "boilerplate"
  ],
  "engines" : { "node" : ">=6" },
  "scripts": {
    "build": "webpack --env.NODE_ENV=prod",
    "start":
      "webpack-dev-server --env.NODE_ENV=dev --progress --debug --config ./webpack.config.ts",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "workbench": "start-storybook -p 9001"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@kadira/storybook": "2.35.3",
    "@types/jest": "22.1.4",
    "@types/webpack": "4.0.0",
    "html-webpack-plugin": "3.0.0",
    "jest": "22.3.0",
    "preact-compat": "3.18.0",
    "ts-loader": "3.5.0",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "tslint-loader": "3.6.0",
    "typescript": "2.7.2",
    "webpack": "4.5.0",
    "webpack-dev-server": "3.0.0"
  },
  "dependencies": {
    "preact": "8.2.7",
    "tslib": "1.9.0"
  }
}
